<Page x:Class="RedeSocial.PageCartaoUsuario"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RedeSocial"
      mc:Ignorable="d" 
      d:DesignHeight="60" d:DesignWidth="600"
      Title="PageCartaoUsuario">

    <Grid Background="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "Auto"/>
            <ColumnDefinition Width = "*"/>
            <ColumnDefinition Width = "Auto"/>
        </Grid.ColumnDefinitions>
        <Ellipse x:Name="foto"   Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Height="45" Width="45" Stretch="Fill" Margin="10,10,10,5" Stroke="#37376E" MouseLeftButtonUp="foto_MouseLeftButtonUp"/>
        <Label x:Name="labelNome" Grid.Column="1" Content="nome usuario" VerticalAlignment="Center" FontSize="16" FontWeight="Bold"/>
        <Button x:Name="botaoAdicionar" Background="GreenYellow" Grid.Column="2" Content="Enviar solicitação" Width="150" FontSize="16" Height="45" Margin="10,0,10,0" Click="botaoAdicionar_Click"/>
    </Grid>
</Page>
