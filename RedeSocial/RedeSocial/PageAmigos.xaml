<Page x:Class="RedeSocial.PageAmigos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RedeSocial"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAmigos">

    <Grid Background="White">
        <ScrollViewer>
            <StackPanel>
                <Grid Background="Beige"  Margin="0,26,0,0" Width="600">
                    <Label Content="Solicitações Recebidas" />
                    <WrapPanel x:Name="gridSolicitacaoRecebida" HorizontalAlignment="Left" VerticalAlignment="Stretch"/>
                </Grid>
                <Grid Background="Violet"  Margin="0,26,0,0" Width="600">
                    <Label Content="Solicitações enviadas"/>
                    <WrapPanel x:Name="gridSolicitacaoEnviada" HorizontalAlignment="Left" VerticalAlignment="Stretch"/>
                </Grid>
                <Grid Background="Blue"  Margin="0,26,0,0" Width="600">
                    <Label Content="Amigos"/>
                    <WrapPanel x:Name="gridAmigos" HorizontalAlignment="Left"/>
                </Grid>
            </StackPanel>

        </ScrollViewer>
    </Grid>
</Page>
