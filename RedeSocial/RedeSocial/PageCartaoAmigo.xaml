<Page x:Class="RedeSocial.PageCartaoAmigo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RedeSocial"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="200"
      Title="PageCartaoAmigo">

    <Grid Background="Beige">
        <Grid Background="Beige">
            <Grid.RowDefinitions>
                <RowDefinition Height = "Auto"/>
                <RowDefinition Height = "*"/>
                <RowDefinition Height= "Auto"/>
                <RowDefinition Height = "Auto"/>
            </Grid.RowDefinitions>
            <Ellipse x:Name="foto"   Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Height="120" Width="120" Stretch="Fill" Margin="10,10,10,5" Stroke="#37376E"/>
            <Label x:Name="labelNome" Grid.Row="1" Content="nome usuario" VerticalAlignment="Center" FontSize="16" FontWeight="Bold"/>
            <Button x:Name="botaoDesfazerAmizade" Background="CornflowerBlue" Grid.Row="2" Content="Desfazer amizade"  FontSize="16" Height="45" Margin="10,0,10,5"  MouseLeftButtonUp="botaoDesfazerAmizade_MouseLeftButtonUp" />
            


        </Grid>


    </Grid>
</Page>
